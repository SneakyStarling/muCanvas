jobs:
  build:
    runs-on: ubuntu-latest
    container: debian:bookworm
    steps:
      - name: Install OpenAL
        run: |
          apt-get update && apt-get install -y libopenal1
      
      - name: Extract Library
        run: |
          cp /usr/lib/aarch64-linux-gnu/libopenal.so.1 $GITHUB_WORKSPACE/
      
      - name: Upload Artifact
        uses: actions/upload-artifact@v3
        with:
          name: openal-library
          path: $GITHUB_WORKSPACE/libopenal.so.1
